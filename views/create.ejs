<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
                <% include ./partials/sidebar %>
        </div>
        <div class="col-md-9">
                <form action="/quotes" method="post">
                    
                        <div class="form-group">
                                <label for="quote_quote">Quotation</label>
                                <input class="form-control" id="quote_quote" type="text" name="quote[quote]" placeholder="What did the author say?">
                        </div>
                        <div class="form-group">
                                <label for="quote_author">Author Name</label>                            
                                <input class="form-control" id="quote_author" type="text" name="quote[author]" placeholder="What was the author's name?">
                        </div>
                        <div class="form-group">
                                <label for="quote_category">Choose Category</label>
                                <select class="form-control selectpicker" name="quote[category]" id="quote_category">
                                  <option>Inspirational</option>
                                  <option>Life</option>
                                  <option>Love</option>
                                  <option>Funny</option>
                                  <option>Wisdom</option>
                                </select >
                        </div>
                        <button class="btn btn-primary" type="submit"><i class="fa fa-paper-plane" style="font-size:18px"></i>
                         Submit</button>
                </form>
        </div>
    </div>
</div>



<% include ./partials/footer %>
