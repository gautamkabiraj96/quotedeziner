<% include ./partials/header %>

<div class="container">
        <div class="row">
            <div class="col-md-3">
                    <% include ./partials/sidebar %>
            </div>
            <div class="col-md-9" style="background: url('/images/img (<%= randomNumber %>).jpg'); 
background-repeat:no-repeat;  
-webkit-background-size: cover;
-moz-background-size: cover;
-o-background-size: cover;
background-size: cover;
border-radius: 15px;
text-shadow: 2px 2px #000; color: white;">
                    <h1 style="text-align: center; margin-top: 10%; font-family: <%= fontName %>"> &#8220;<%= quote.quote %>&#8221;</h1> <br>
                    <h6 class="float-right" style="padding-right: 10%;">~<%= quote.author %></h6> <br>
            </div>
        </div>
        <div class="row">
             <div class="col-md-3">

             </div>
             <div class="col-md-9">
                     <hr>
                     <span class="badge badge-primary">Quote Category: <%= quote.category %></span>                     
                     <div class="text-right">
                                <button class="btn btn-dark" onclick="redezine()"><i class="fa fa-random" style="font-size:18px"></i>
                                Redezine</button>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                <i class="fa  fa-quote-left" style="font-size:18px"></i>
                                        Show Quote Text
                                </button>
                                <a class="btn btn-dark" href="#"><i class="fa fa-print" style="font-size:18px"></i> Print</a>
                                <a class="btn btn-danger" href="#"><i class="fa fa-remove" style="font-size:18px"></i> Delete</a>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Quote by <%= quote.author %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
              <span class="float-left">Copy the quote content and share anywhere! </span>  <br><br>
                            <textarea class="form-control" id="message-text">&#8220;<%= quote.quote %>&#8221;</textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-remove" style="font-size:18px"></i>
 Close</button>

            </div>
        </div>
    </div>
</div>
 <!--END OF MODAL-->                               


                     </div>
             </div>
        </div>

</div>

<script>
$('#myModal').on('shown.bs.modal', function () {
  $('#myInput').trigger('focus')
})
</script>

<% include ./partials/footer %>